    <div class="controls">
      <button onclick="document.body.classList.toggle('dark-mode')" style="background:none; border:none; cursor:pointer; font-size:1.5rem;">ðŸŒ“</button>
      <div id="myProfile" style="display:flex; align-items:center; gap:10px;">
        <span id="myName" style="font-weight:600;">Loading...</span>
        <div class="avatar" id="myAvatar" style="width:40px; height:40px; font-size:1rem;">?</div>
      </div>
    </div>
  </div>

  <div class="container">
    <p class="hub-title">PEOPLE ONLINE</p>
    <div id="onlineGrid">
      </div>
  </div>

  <div id="callOverlay">
    <h1 id="callStatus" style="color:white; margin-bottom:20px; font-weight:400;">Connecting...</h1>
    <div class="video-container">
      <video id="remoteVideo" autoplay playsinline></video>
      <video id="localVideo" autoplay playsinline muted></video>
    </div>
    <div class="call-actions">
      <button id="acceptBtn" class="circle-btn" style="background:#31a24c; color:white;" onclick="answerCall()">ðŸ“ž</button>
      <button class="circle-btn" style="background:#fa3e3e; color:white;" onclick="hangUp()">ðŸš«</button>
    </div>
  </div>

  <audio id="ringtone" src="https://assets.mixkit.co/active_storage/sfx/1359/1359-preview.mp3" loop></audio>

  <script type="module">
    import { initializeApp } from "https://www.gstatic.com/firebasejs/9.23.0/firebase-app.js";
    import { getAuth, onAuthStateChanged } from "https://www.gstatic.com/firebasejs/9.23.0/firebase-auth.js";
    import { getDatabase, ref, set, onValue, remove, push, update, onChildAdded } from "https://www.gstatic.com/firebasejs/9.23.0/firebase-database.js";

    const firebaseConfig = {
      apiKey: "AIzaSyCN8ypq4TxhLwjseqnDJneBO2j_BlARz0M",
      authDomain: "chat-or-somethig.firebaseapp.com",
      databaseURL: "https://chat-or-somethig-default-rtdb.firebaseio.com",
      projectId: "chat-or-somethig",
      storageBucket: "chat-or-somethig.firebasestorage.app",
      messagingSenderId: "598777875087",
      appId: "1:598777875087:web:d100536dd269bc0a9d7efa",
      measurementId: "G-VQQ0TYRNNH"
    };

    const app = initializeApp(firebaseConfig);
    const auth = getAuth(app);
    const database = getDatabase(app);

    let currentUser = null, currentUsername = "";
    let localStream = null, pc = null;
    const servers = { iceServers: [{ urls: "stun:stun.l.google.com:19302" }, { urls: "turn:openrelay.metered.ca:80", username: "openrelayproject", credential: "openrelayproject" }] };

    onAuthStateChanged(auth, (user) => {
      if (!user) { location.href = 'index.html'; return; }
      currentUser = user;
      currentUsername = user.email.split('@')[0];
      document.getElementById("myName").textContent = currentUsername;
      document.getElementById("myAvatar").textContent = currentUsername[0].toUpperCase();

      // Presence
      const myPresence = ref(database, `online/${user.uid}`);
      set(myPresence, { name: currentUsername, uid: user.uid });
      onDisconnect(myPresence).remove();

      // Listen for calls
      onValue(ref(database, `calls/${user.uid}`), (snap) => {
        const data = snap.val();
        if (data && data.offer && !pc) {
          window.incomingCallData = data;
          document.getElementById("callOverlay").style.display = "flex";
          document.getElementById("callStatus").textContent = "Incoming: " + data.name;
          document.getElementById("acceptBtn").style.display = "flex";
          document.getElementById("ringtone").play().catch(e => {});
        } else if (!data && pc) {
          hangUp();
        }
      });
    });

    // --- GRID SYNC ---
    onValue(ref(database, 'online'), (s) => {
      const users = s.val() || {};
      const grid = document.getElementById("onlineGrid");
      grid.innerHTML = "";
      Object.keys(users).forEach(uid => {
        if(uid === currentUser.uid) return;
        const card = document.createElement("div");
        card.className = "user-card";
        card.innerHTML = `
          <div class="avatar">${users[uid].name[0].toUpperCase()}</div>
          <div class="user-info">
            <div class="user-name">${users[uid].name}</div>
            <div class="status-tag">Online</div>
          </div>
          <button class="call-btn-large" onclick="startCall('${uid}')">Call</button>
        `;
        grid.appendChild(card);
      });
    });

    // --- VIDEO ENGINE ---
    async function startMedia() {
      localStream = await navigator.mediaDevices.getUserMedia({ video: true, audio: true });
      document.getElementById("localVideo").srcObject = localStream;
    }

    window.startCall = async (targetUid) => {
      document.getElementById("callOverlay").style.display = "flex";
      document.getElementById("callStatus").textContent = "Ringing...";
      document.getElementById("acceptBtn").style.display = "none";
      await startMedia();

      pc = new RTCPeerConnection(servers);
      localStream.getTracks().forEach(t => pc.addTrack(t, localStream));
      pc.ontrack = (e) => document.getElementById("remoteVideo").srcObject = e.streams[0];
      pc.onicecandidate = (e) => {
        if(e.candidate) push(ref(database, `calls/${targetUid}/candidates`), e.candidate.toJSON());
      };

      const offer = await pc.createOffer();
      await pc.setLocalDescription(offer);
      
      const callRef = ref(database, `calls/${targetUid}`);
      set(callRef, { offer: { type: offer.type, sdp: offer.sdp }, name: currentUsername, from: currentUser.uid });

      onValue(callRef, async (s) => {
        const data = s.val();
        if (data?.answer && pc?.signalingState === "have-local-offer") {
          await pc.setRemoteDescription(new RTCSessionDescription(data.answer));
          document.getElementById("callStatus").textContent = "Connected";
        }
      });
    };

    window.answerCall = async () => {
      document.getElementById("ringtone").pause();
      await startMedia();
      pc = new RTCPeerConnection(servers);
      localStream.getTracks().forEach(t => pc.addTrack(t, localStream));
      pc.ontrack = (e) => document.getElementById("remoteVideo").srcObject = e.streams[0];
      pc.onicecandidate = (e) => {
        if(e.candidate) push(ref(database, `calls/${window.incomingCallData.from}/candidates`), e.candidate.toJSON());
      };

      await pc.setRemoteDescription(new RTCSessionDescription(window.incomingCallData.offer));
      const answer = await pc.createAnswer();
      await pc.setLocalDescription(answer);
      update(ref(database, `calls/${currentUser.uid}`), { answer: { type: answer.type, sdp: answer.sdp } });
      
      onChildAdded(ref(database, `calls/${currentUser.uid}/candidates`), (s) => {
        if(pc && s.val()) pc.addIceCandidate(new RTCIceCandidate(s.val())).catch(e => {});
      });

      document.getElementById("callStatus").textContent = "Connected";
      document.getElementById("acceptBtn").style.display = "none";
    };

    window.hangUp = () => {
      if(localStream) localStream.getTracks().forEach(t => t.stop());
      if(pc) { pc.close(); pc = null; }
      remove(ref(database, `calls/${currentUser.uid}`));
      document.getElementById("callOverlay").style.display = "none";
      document.getElementById("ringtone").pause();
    };
  </script>
</body>
